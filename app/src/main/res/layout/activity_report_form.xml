<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.avner.lostfound.ReportForm">

    <!--  android:background="#ff009ab6" -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:src="@drawable/report_lost_item" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Spinner
            android:id="@+id/s_choose_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignLeft="@+id/s_choose_item"
            android:layout_alignStart="@+id/s_choose_item"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/image_border"
            android:src="@drawable/image_unavailable" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/time_of_loss_colon"
            android:textSize="@dimen/abc_text_size_medium_material" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/location_colon"
            android:textSize="@dimen/abc_text_size_medium_material" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/description_colon"
            android:textSize="@dimen/abc_text_size_medium_material" />

        </GridLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/b_submit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/b_submit"
            android:layout_below="@+id/textView6"
            android:ems="10"
            android:inputType="textMultiLine"
            android:lines="5" />

        <Button
            android:id="@+id/b_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/button_background"
            android:text="Submit"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/b_abort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/b_submit"
            android:background="@color/button_background"
            android:text="Abort"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toEndOf="@+id/b_abort"
            android:layout_toRightOf="@+id/b_abort" />

        <ImageButton
            android:id="@+id/b_pick_time_date"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/et_time_picker"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/button_background"
            android:clickable="false"
            android:singleLine="false"
            android:src="@android:drawable/ic_menu_today" />

        <ImageButton
            android:id="@+id/b_location_picker"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/editText"
            android:layout_alignRight="@+id/editText"
            android:layout_alignTop="@+id/textView4"
            android:background="@color/button_background"
            android:clickable="false"
            android:singleLine="false"
            android:src="@android:drawable/ic_menu_compass" />

        <EditText
            android:id="@+id/et_location_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/b_location_picker"
            android:layout_toLeftOf="@+id/b_pick_time_date"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toStartOf="@+id/b_pick_time_date"
            android:enabled="false"
            android:hint="<Default: Here>" />

        <EditText
            android:id="@+id/et_time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et_location_picker"
            android:layout_alignStart="@+id/et_location_picker"
            android:layout_below="@+id/b_location_picker"
            android:layout_toLeftOf="@+id/b_pick_time_date"
            android:layout_toStartOf="@+id/b_pick_time_date"
            android:enabled="false"
            android:hint="<Default: Now>" />

    </LinearLayout>


</LinearLayout>
