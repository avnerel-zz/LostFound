<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:background="?android:attr/activatedBackgroundIndicator">

    <ImageButton
        android:id="@+id/ib_conversation_item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_unavailable"
        android:layout_alignTop="@+id/tv_user_list_item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/tv_user_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:hint="User name"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="20sp"
        android:singleLine="true"
        android:layout_toRightOf="@+id/ib_conversation_item_image"
        android:layout_toEndOf="@+id/ib_conversation_item_image"
        android:layout_toLeftOf="@+id/iv_item_done"
        android:layout_toStartOf="@+id/iv_item_done"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item"
        android:id="@+id/tv_item_header"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/ib_conversation_item_image"
        android:layout_toRightOf="@+id/ib_conversation_item_image"
        android:layout_toEndOf="@+id/ib_conversation_item_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item name"
        android:id="@+id/tv_item_name"
        android:textSize="18sp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/tv_item_header"
        android:layout_toRightOf="@+id/tv_item_header"
        android:layout_toEndOf="@+id/tv_item_header"
        android:layout_toLeftOf="@+id/iv_item_done"
        android:layout_toStartOf="@+id/iv_item_done"
        android:textColor="@color/abc_search_url_text" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="0"
        android:background="@drawable/red_badge_circle"
        android:id="@+id/tv_unread_count"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/iv_item_done"
        android:src="@drawable/done_icon"
        android:layout_alignTop="@+id/tv_unread_count"
        android:layout_toLeftOf="@+id/tv_unread_count"
        android:layout_toStartOf="@+id/tv_unread_count"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:visibility="invisible"
        android:background="@android:color/transparent"/>

</RelativeLayout>

