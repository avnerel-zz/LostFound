<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:background="?android:attr/activatedBackgroundIndicator">

    <TextView
        android:id="@+id/tv_user_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:hint="User name"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ib_conversation_item_image"
        android:layout_toEndOf="@+id/ib_conversation_item_image" />

    <ImageButton
        android:id="@+id/ib_conversation_item_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_unavailable"
        android:layout_alignTop="@+id/tv_user_list_item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="0"
        android:background="@drawable/red_badge_circle"
        android:id="@+id/tv_unread_count"
        android:layout_alignBottom="@+id/ib_conversation_item_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

